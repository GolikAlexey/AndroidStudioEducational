<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Multiplayer_playing_field"
    android:background="@color/lavender"
    >

    <LinearLayout
        android:id="@+id/linearLayoutOuter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit_menu_mp">

        <LinearLayout
            android:id="@+id/playerOneLayoutOuter"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerOneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="Player One"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ximage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerTwoLayoutOuter"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerTwoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="Player Two"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/oimage" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutOuter1">

        <LinearLayout
            android:id="@+id/playerOneLayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerTwoLayout"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image1S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image2S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image3S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image4S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image5S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image6S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image7S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image8S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />

            <ImageView
                android:id="@+id/image9S"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/white_box" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/exit_menu_mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E92A1E"
        android:text="Exit to menu"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>