<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiplayer_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyltiplayerSettings"
    android:background="#EDD1D9"
    android:padding="40dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_box"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/enter_players_name"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/playerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:autofillHints="no"
            android:background="@drawable/blue_border"
            android:drawableStart="@drawable/ic_xicon"
            android:ems="13"
            android:hint="@string/enter_player_one_name"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/blue"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/playerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints="no"
            android:background="@drawable/blue_border"
            android:drawableStart="@drawable/ic_oicon"
            android:ems="13"
            android:hint="@string/enter_player_two_name"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/blue"
            android:textStyle="italic" />

        <Button
            android:id="@+id/startGameButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="@string/start_game"
            android:textSize="18sp"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_back_multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="Multiplayer"
        android:textColor="#125CF3"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>